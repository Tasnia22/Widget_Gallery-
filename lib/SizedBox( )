
import 'package:flutter/material.dart';

class Sized_box extends StatelessWidget
{
  const Sized_box({super.key});

  @override

  Widget build(BuildContext context)
  {
    return Scaffold(
      appBar: AppBar(
        title: Text('Sized Box demo'),
        backgroundColor: const Color.fromARGB(255, 93, 234, 250),
      ),

body: Center(
  child: Column(
    mainAxisAlignment: MainAxisAlignment.center,
    children: [
      const Text(
        "Hello world",
        style: TextStyle(
          fontSize: 22,fontWeight: FontWeight.bold
        ),
      ),
const SizedBox(height: 30),

SizedBox(
  width: 200,
  height: 70,
  child: ElevatedButton(onPressed: (){},
   child: const Text('Click me'),),
),

SizedBox(height: 50),
SizedBox(
  width: 150,
  height: 100,
  child: Container(
    color: const Color.fromARGB(255, 108, 250, 170),
    child: const Center(
      child: Text('Fixed box'),
    ),
  ),
)
    ],
  ),
),


    );
  }
}
