
import 'package:flutter/material.dart';

class Expanded_demo extends StatelessWidget{

  const Expanded_demo({super.key});

  @override

  Widget build(BuildContext context)
  {
    return Scaffold(
      appBar: AppBar(
        title: Text('Expanded_Demo'),
      ),

      body: Center(
        child: Row(
          children: [
            Expanded(flex: 1,
              child: 
            SizedBox(
              width: 50,
              height: 50,
              
              child: Container(
                color: Colors.indigoAccent,
              ),
              

            ),),
            Expanded(flex: 1,
              child:Container(
                color: Colors.lightGreenAccent,height: 50,
              ),
               ),Expanded(flex:1,child:  Container(color: Colors.purpleAccent,
               height: 50),),
            
          ],

        ),
      ),
    );
  }
}
